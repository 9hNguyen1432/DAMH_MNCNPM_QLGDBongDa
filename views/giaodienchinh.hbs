<div style="padding-top: 100px; padding-bottom: 50px">
    <div>
        <div class="d-flex justify-content-between" style="width: 800px;
            margin:auto; background-color: #0063D8; padding: 5px;
            border-radius:20px; padding-right: 45px">
            <div style="color: red; line-height:45px">Lịch thi đấu</div>
            <div style="font-weight: 800; font-size: 30px">{{today}}</div>
            <div></div>
        </div>

        <div style="margin: auto; width: 800px">
            {{#each match1}}
            <div class="d-flex justify-content-between" style="max-width: 400px;
                background-color: #222035;
                padding: 15px 50px; border-radius: 15px; margin:auto;
                margin-top:30px;">
                <div style="text-align: center;">
                    <div style="width: 60px; height:60px; border-radius: 50%">
                        <img
                            src="https://firebasestorage.googleapis.com/v0/b/qlbd-234ef.appspot.com/o/BD.png?alt=media&token=8c46c32f-0f89-4758-9080-78037cfb72cc"
                            alt="" style="border-radius: 50%; border: 3px solid
                            white">
                    </div>
                    <div style="color: white; font-size: 12px; font-weight:
                        bold; margin:4px">{{this.club_1}}</div>
                </div>

                <div style="color: white; line-height:84px; font-size: 18px;
                    font-weight: bold;">
                    {{this.time}}
                </div>

                <div style="text-align: center;">
                    <div style="width: 60px; height:60px; border-radius: 50%">
                        <img
                            src="https://firebasestorage.googleapis.com/v0/b/qlbd-234ef.appspot.com/o/BD.png?alt=media&token=8c46c32f-0f89-4758-9080-78037cfb72cc"
                            alt="" style="border-radius: 50%; border: 3px solid
                            white">
                    </div>
                    <div style="color: white; font-size: 12px; font-weight:
                        bold; margin:4px"> {{this.club_2}} </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <div style="margin-top: 40px;">
        <div class="d-flex justify-content-between" style="width: 800px;
            margin:auto; background-color: #0063D8; padding: 5px;
            border-radius:20px; padding-right: 45px">
            <div style="color: rgb(0, 255, 17); line-height:45px">Lịch thi
                đấu</div>
            <div style="font-weight: 800; font-size: 30px">{{nextday}}</div>
            <div></div>
        </div>

        <div style="margin: auto; width: 800px">

            <div class="d-flex justify-content-between row row-cols-2">
                {{#each match2}}
                <div class="d-flex justify-content-between" style="max-width:
                    400px; background-color: #222035;
                    padding: 15px 50px; border-radius: 15px; margin:auto;
                    margin-top:30px;">
                    <div style="text-align: center;">
                        <div style="width: 60px; height:60px; border-radius:
                            50%">
                            <img
                                src="https://firebasestorage.googleapis.com/v0/b/qlbd-234ef.appspot.com/o/BD.png?alt=media&token=8c46c32f-0f89-4758-9080-78037cfb72cc"
                                alt="" style="border-radius: 50%; border: 3px
                                solid white">
                        </div>
                        <div style="color: white; font-size: 12px; font-weight:
                            bold; margin:4px">{{this.club_1}}</div>
                    </div>

                    <div style="color: white; line-height:84px; font-size: 18px;
                        font-weight: bold;">
                        {{this.time}}
                    </div>

                    <div style="text-align: center;">
                        <div style="width: 60px; height:60px; border-radius:
                            50%">
                            <img
                                src="https://firebasestorage.googleapis.com/v0/b/qlbd-234ef.appspot.com/o/BD.png?alt=media&token=8c46c32f-0f89-4758-9080-78037cfb72cc"
                                alt="" style="border-radius: 50%; border: 3px
                                solid white">
                        </div>
                        <div style="color: white; font-size: 12px; font-weight:
                            bold; margin:4px"> {{this.club_2}} </div>
                    </div>
                </div>
                {{/each}}
            </div>

        </div>
    </div>
</div>