<div class="bg-light vh-100" style="margin: 0; align-item:center; padding: 30px; padding-top:100px">
    <div class="text-center" style="padding: 20px; width: 450px;
        background-color: #8268E9;border-radius: 35px; margin:auto;
        font-size: 20px;">
        CÁC ĐỘI BÓNG THAM DỰ GIẢI ĐẤU
    </div>

    <div class="list-film text-center border" style=" padding-top: 30px;">
        <div class="container">
            <div class="row text-center" style="padding-bottom: 10px;">
                {{#each clubs}}
                <a href="/detail/{{this.id}}" class="col" style="padding-bottom:
                    20px; text-decoration:none">
                    <div class="card" style="width: 18rem;">
                        {{!-- Logo CLB --}}
                        <img src="{{this.img}}" class="card-img-top" alt="...">
                        <div class="card-body">
                            {{!-- Tên câu lạc bộ --}}
                            <h5 class="card-title">{{this.title}}</h5>
                        </div>
                    </div>
                </a>
                {{/each}}

            </div>

        </div>
    </div>
</div>