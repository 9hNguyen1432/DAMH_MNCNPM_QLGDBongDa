

  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
          <div class="card-body p-4 p-sm-5">
            <h5 class="card-title text-center mb-5 fw-light fs-5">Sign In</h5>
            <form method="post" action="/auth/login">
              <div class="form-floating mb-3">
                <input name="username" type="text" class="form-control" id="floatingInput" placeholder="Username" value ={{username}} >
                <label for="floatingInput">Username</label>
              </div>
              <div class="form-floating mb-3">
                <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password" value ={{password}} >
                <label for="floatingPassword">Password</label>
              </div>

              <div class="form-check mb-3">
                <input name="checkstatus" class="form-check-input" type="checkbox" value="no" id="rememberPasswordCheck" >
                <label class="form-check-label" for="rememberPasswordCheck">
                  Remember password
                </label>
              </div>
              <div class="d-grid">
                <button name="login" value="login" class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">Sign In</button>
              </div>
              <hr class="my-4">
              <div class="d-grid">
                <button name='login' value="signin" class="btn btn-facebook btn-login text-uppercase fw-bold" type="submit">
                   Register
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>

    </div>
  </div>